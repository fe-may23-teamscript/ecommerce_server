{
  "name": "ecommerce_server",
  "version": "1.0.0",
  "description": "Node.js server app with PostgreSQL",
  "main": "src/app.ts",
  "scripts": {
    "db-migrate": "sequelize-cli db:migrate",
    "db-seed": "sequelize-cli db:seed:all",
    "build": "npm run db-migrate && tsc",
    "start": "node dist/app.js",
    "dev": "nodemon -q src/app.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint . --ignore-path .gitignore",
    "fix-style": "npm run format && npm run lint -- --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fe-may23-teamscript/ecommerce_server.git"
  },
  "author": "Team Script",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/fe-may23-teamscript/ecommerce_server/issues"
  },
  "homepage": "https://github.com/fe-may23-teamscript/ecommerce_server#readme",
  "volta": {
    "node": "18.17.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.7",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.48.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^1.0.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "3.0.2",
    "sequelize-cli": "^6.6.1",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1"
  },
  "lint-staged": {
    "*.{ts, js}": "npm run lint"
  }
}
